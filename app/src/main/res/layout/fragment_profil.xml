    android:layout_height="match_parent"
    android:background="@drawable/ic_back"
    tools:context=".view.fragment.Profil">

    <LinearLayout
        android:id="@+id/pro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:text="My Profile"
            android:textSize="50dp"
            android:textStyle="bold"
            android:textAlignment="center"/>

        <ImageView
            android:id="@+id/foto"
            android:layout_width="190dp"
            android:layout_height="210dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/nanas" />

        <TextView
            android:id="@+id/txt_nama"
            android:layout_width="312dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/foto"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:elevation="12dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Nasthasa Wulan Ghani Sopian"
            android:textSize="20dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_nim"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_nama"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:elevation="12dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="10119276"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_kelas"
            android:layout_width="302dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_nim"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:elevation="12dp"
            android:gravity="center_horizontal"
            android:padding="10dp"
            android:text="Kelas IF-7"
            android:textSize="15dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_email"
            android:layout_width="342dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_kelas"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:elevation="12dp"
            android:gravity="center_horizontal"
            android:padding="15dp"
            android:text="nasthasa.10119276@mahasiswa.unikom.ac.id"
            android:textSize="15dp"
            android:textStyle="bold" />

